<?php
$n = count($generales->all);
$pdf=new Fpdf_multicell();
$pdf->AddPage();
$pdf->SetFont('Times','B',10);
$pdf->Cell(0,5,$title,'B',1,'L');
//$pdf->ln(3);
$pdf->SetFont('Times','',8);
$h = 5;// altura
$pdf->ln($h);
$x1 = $pdf->GetX();
$x2 = $x1+25;
$y = $pdf->GetY();
//201
$generalesw= array(7,16,35,35,20,20,20,16,30);
$generalesw= array(7,16,70,20,20,20);
$i = 1;
$borde = 1;
foreach($generales->all as $row) {
	$pdf->SetXY($x1,$y);
	$pdf->SetWidths($generalesw);
	$pdf->Cell(170);
	$pdf->Cell(25,$h,"ID Pedido Venta:",$borde,1, 'C');
	$pdf->SetFillColor(255,0,0);
	$pdf->Cell(170);
	$pdf->Cell(25,$h,$row->id,$borde,1, 'C');
	$pdf->Cell(170);
	$pdf->Cell(25,$h,"FECHA ALTA:",$borde,1, 'C');
	$pdf->Cell(170);
	$pdf->Cell(25,$h,$row->fecha_alta,$borde,1, 'C');
	$pdf->ln($h+1);
	$pdf->Cell(32,$h,"EMPRESA:");
	$pdf->Cell(0,$h,$row->EMPRESA,$borde);
	$pdf->ln($h+1);
	$pdf->Cell(32,$h,"CLIENTE:");
	$pdf->Cell(0,$h,$row->cliente,$borde);
	$pdf->ln($h+1);
	$pdf->Cell(32,$h,"ESTATUS:");
	$pdf->Cell(40,$h,$row->estatus,$borde);
	$pdf->Cell(32,$h,"FORMA DE COBRO:");
	$pdf->Cell(0,$h,$row->forma_cobro,$borde);
	$pdf->ln($h+3);
	// detalles de la factura
	$pdf->SetWidths($detallesw);
	$pdf->SetAligns(array("C","C","L", "R", "R", "R"));
	$pdf->SetFont('Times','B',9);
	$pdf->SetFillColor(200,0,0);
	$pdf->Row(array("#","Cantidad","Producto", "Precio U.", "IVA", "Subtotal"));
	$pdf->SetFont('Times','',8);
	$i=1;
	foreach($detalles->all as $lista){
	if(!($i%2))
	    $pdf->SetFillColor(200,0,0);
	else
	    $pdf->SetFillColor(255,0,0);
		$pdf->Row(array($i, $lista->cantidad, "$lista->producto $lista->presentacion"));
	$i+=1;
	}
	$pdf->Cell(0,$h,"",'T',1);
	$pdf->Cell(32,7,"OBSERVACIONES:",0,1);
	$pdf->Cell(0,7,"",1,1);
	$pdf->Cell(0,7,"",'LBR',1);
	$pdf->Cell(0,7,"",'LBR',1);
	$pdf->ln(25);
	$pdf->Cell(15);
	$pdf->Cell(50,5,"NOMBRE Y FIRMA",'T',0,'C');
	$pdf->Cell(10);
	$pdf->Cell(50,5,"NOMBRE Y FIRMA",'T',0,'C');
	$pdf->Cell(10);
	$pdf->Cell(50,5,"NOMBRE Y FIRMA",'T',1,'C');
	$pdf->Cell(15);
	$pdf->Cell(50,5,"$row->entrega",0,0,'C');
	$pdf->Cell(10);
	$pdf->Cell(50,5,"DE QUIEN TRASLADA",0,0,'C');
	$pdf->Cell(10);
	$pdf->Cell(50,5,"$row->recibe",0,1,'C');

	if($i++ < $n) $pdf->AddPage();
}
$pdf->Output();
?>
