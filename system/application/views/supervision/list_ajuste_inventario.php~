      echo "<tr background=\"$img_row\"><td align=\"center\">$row->id</td><td align=\"center\">$row->espacio</td><td align=\"center\">".fecha_imp($row->fecha)."</td><td align=\"center\">$row->hora</td><td align=\"center\">$row->estatus</td><td align=\"center\">$row->usuario</td><td align=\"center\">$row->estatus_general</td><td>$pdf<a href=\"".base_url()."index.php/".$ruta."/".$controller."/".$funcion."/".$subfuncion."/editar_ajuste_inventario/".$row->id."\">$edit</a>$delete</td></tr>";	      

